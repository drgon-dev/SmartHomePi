<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
                android:id="@+id/deviceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Информация об устройстве"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <!-- Блок настроек лампы -->
        <androidx.constraintlayout.widget.Group
                android:id="@+id/lightSettingsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="brightnessLabel,brightnessSeekBar,colorLabel,colorSpinner,lightBottomSpacer"
                android:visibility="gone" />

        <!-- Блок настроек кондиционера (термостата) -->
        <androidx.constraintlayout.widget.Group
                android:id="@+id/acSettingsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="acModeLabel,acModeSpinner,acTempLabel,acTempSeekBar,acFanLabel,acFanSpinner,acBottomSpacer"
                android:visibility="gone" />

        <!-- Настройки для лампы -->
        <TextView
                android:id="@+id/brightnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Яркость:"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deviceInfo" />

        <SeekBar
                android:id="@+id/brightnessSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brightnessLabel" />

        <TextView
                android:id="@+id/colorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цвет:"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brightnessSeekBar" />

        <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colorLabel" />

        <!-- Спейсер для лампы -->
        <View
                android:id="@+id/lightBottomSpacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colorSpinner" />

        <!-- Настройки для кондиционера (термостата) -->
        <TextView
                android:id="@+id/acModeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Режим работы:"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deviceInfo" />

        <Spinner
                android:id="@+id/acModeSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acModeLabel" />

        <TextView
                android:id="@+id/acTempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Температура: 22°C"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acModeSpinner" />

        <SeekBar
                android:id="@+id/acTempSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="30"
                android:progress="22"
                android:min="16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acTempLabel" />

        <TextView
                android:id="@+id/acFanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорость вентилятора:"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acTempSeekBar" />

        <Spinner
                android:id="@+id/acFanSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acFanLabel" />

        <!-- Спейсер для кондиционера -->
        <View
                android:id="@+id/acBottomSpacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/acFanSpinner" />

        <!-- Барьер, который всегда находится ниже видимого спейсера -->
        <androidx.constraintlayout.widget.Barrier
                android:id="@+id/bottomBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="lightBottomSpacer,acBottomSpacer" />

        <!-- Кнопка сохранения -->
        <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сохранить настройки"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>